<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hello Bulma!</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/bulma.css">
    
  </head>
  <body>
      
      <% include ../partials/main-menu %>

    <section class="hero">
            <div class="hero-body">
              <div class="container">
                <h1 class="title">
                  Login
                </h1>
                <h2 class="subtitle">
                  Efetuar Login no sistema
                </h2>
              </div>
            </div>
          </section>

          <section class="section">
                <div class="columns">
                        <div class="column is-half">
                            
                                <form action="/login" method="POST">
                                    
                                    <% for(var i=0; i<errors.length; i++) { %>
                                        <p><%=errors[i].param%> - <%=errors[i].msg%></p>
                                    <% } %>
                                    <div class="field">
                                        <label class="label">Email</label>
                                        <div class="control">
                                            <input id="userEmail" name="userEmail" 
                                            class="input" type="email" 
                                            value="<%=user.userEmail %>" placeholder="Seu email">
                                        </div>
                                    </div>
                                    <div class="field">
                                        <label class="label">Senha</label>
                                        <div class="control">
                                            <input class="input" 
                                                id="userPassword" 
                                                name="userPassword" type="password" 
                                                value="<%=user.userPassword %>" placeholder="Text input">
                                        </div>
                                    </div>
                                    <div class="field is-grouped">
                                    <div class="control">
                                        <button class="button is-primary">Submit</button>
                                    </div>
                                    <div class="control">
                                        <button class="button is-link">Cancel</button>
                                    </div>
                                    </div>
                                </form>

                        </div>
                        
                      </div>
                            
          </section>
 <% include ../partials/main-footer %>

          <script src="js/bulma.js"></script>
  </body>
</html>